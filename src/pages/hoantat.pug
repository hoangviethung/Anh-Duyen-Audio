extends _layout/_layout.pug

block var
	- var title = 'Anh Duyên | Hoàn tất'
	- var bodyClass = 'cart-finish-page'

block main
	include ../components/breadcrumb/breadcrumb.pug
	section.list-product
		.container
			.row
				.col-lg-auto
					include ../components/filter/filter.pug
				.col-lg
					.quantity
						p Có 
							span(data-sum-product) 2340 
							| sản phẩm
					.row.no-gutters.list-item-product
						-for(i=1;i<17;i++)
							.col-lg-3.col-6.item
								include ../components/product/item-product.pug
								+imgProduct(i)
					include ../components/_global/pagination.pug